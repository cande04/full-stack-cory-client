{{#each restaurants as |restaurant|}}
  {{log restaurant}}
  <section data-id="{{restaurant.id}}">
    <h6>Name:</h6>
    <h3>
      {{restaurant.name}}
    </h3>
    <h6>City:</h6>
    <p>
      {{#if restaurant.city}}
        {{restaurant.city}}
      {{else}}
        No city provided.
      {{/if}}
    </p>
    <p>
      {{restaurant.id}}
    </p>

    <button class='btn btn-danger delete-restaurant' data-id="{{restaurant.id}}">delete</button>
  </section>

{{/each}}
